.container
  .row
    .col-sm-6.col-md-4.col-md-offset-4
      %h1.text-center.login-title= t('.change_your_password')
      .account-wall
        = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:class => 'form-signin', :method => :put }) do |f|
          = devise_error_messages!
          = f.hidden_field :reset_password_token
          = f.input :password, :placeholder => t('.new_password'), :label => false
          = f.input :password_confirmation, :placeholder => t('.confirm_new_password'), :label => false
          %button.btn.btn-lg.btn-primary.btn-block{:type => "submit"}= t('.change_my_password')
          %span.clearfix

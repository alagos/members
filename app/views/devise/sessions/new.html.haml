.container
  .row
    .col-sm-6.col-md-4.col-md-offset-4
      %h1.text-center.login-title= t('.sign_in')
      .account-wall
        = image_tag 'avatar_2x.png', class: 'profile-img'
        = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-signin'}) do |f|
          = f.input :email, :placeholder => resource.class.human_attribute_name(:email), :label => false
          = f.input :password, :placeholder => resource.class.human_attribute_name(:password), :label => false
          %button.btn.btn-lg.btn-primary.btn-block{:type => "submit"}= t('.sign_in')
          %label.checkbox.pull-left
            %input{:type => "checkbox", :value => "remember-me"}/
            = resource.class.human_attribute_name(:remember_me)
          = link_to t(".forgot_your_password"), new_password_path(resource_name), class: 'pull-right need-help'
          %span.clearfix
      = link_to t(".sign_up"), new_registration_path(resource_name), class: 'text-center new-account'

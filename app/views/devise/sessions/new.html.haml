.container
  .row
    .col-sm-6.col-md-4.col-md-offset-4
      %h1.text-center.login-title= t('.sign_in', :default => "Sign in")
      .account-wall
        = image_tag 'avatar_2x.png', class: 'profile-img'
        = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-signin'}) do |f|
          = f.email_field :email, :placeholder => resource.class.human_attribute_name(:email), :class => 'form-control'
          = f.password_field :password, :placeholder => resource.class.human_attribute_name(:password), :class => 'form-control'
          %button.btn.btn-lg.btn-primary.btn-block{:type => "submit"}
            = t('.sign_in', :default => "Sign in")
          %label.checkbox.pull-left
            %input{:type => "checkbox", :value => "remember-me"}/
            = resource.class.human_attribute_name(:remember_me)
          = link_to t(".forgot_your_password", :default => "Forgot your password?"), new_password_path(resource_name), class: 'pull-right need-help'
          %span.clearfix
      = link_to t(".sign_up", :default => "Sign up"), new_registration_path(resource_name), class: 'text-center new-account'

.container
  .row
    .col-sm-6.col-md-4.col-md-offset-4
      %h1.text-center.login-title= t('.sign_up')
      .account-wall
        = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-signin'}, :wrapper => :sign_form) do |f|
          = f.input :name
          = f.input :email
          = f.input :password
          = f.input :password_confirmation
          %button.btn.btn-lg.btn-primary.btn-block{:type => "submit"}= t('.sign_up')
          %span.clearfix
      = link_to t('sign_in'), new_user_session_path, class: 'text-center new-account'

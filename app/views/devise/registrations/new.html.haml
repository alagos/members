.container
  .row
    .col-sm-6.col-md-4.col-md-offset-4
      %h1.text-center.login-title= t('.sign_up', :default => "Sign up")
      .account-wall
        = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-signin'}) do |f|
          = f.text_field :name, :placeholder => resource.class.human_attribute_name(:name), :class => 'form-control'
          = f.email_field :email, :placeholder => resource.class.human_attribute_name(:email), :class => 'form-control'
          = f.password_field :password, :placeholder => resource.class.human_attribute_name(:password), :class => 'form-control'
          = f.password_field :password_confirmation, :placeholder => resource.class.human_attribute_name(:password_confirmation), :class => 'form-control'
          %button.btn.btn-lg.btn-primary.btn-block{:type => "submit"}
            = t('.sign_in', :default => "Sign in")
          %span.clearfix
      = link_to t('link.new_session'), new_user_session_path, class: 'text-center new-account'

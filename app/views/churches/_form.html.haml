= simple_form_for @church, html: {class: 'form-horizontal'} do |f|

  = f.input :name, placeholder: Church.human_attribute_name(:name)
  = f.input :address, placeholder: Church.human_attribute_name(:address)
  = f.input :email, placeholder: Church.human_attribute_name(:email)
  = f.input :phone, placeholder: Church.human_attribute_name(:phone)
  .form-group
    .col-xs-offset-2.col-xs-10
      = f.submit class: "btn btn-primary btn-lg"

- if(@members.present?)
  .row
    .col-md-12.col-sm-12.col-xs-12
      .box-body.no-padding
        .x_panel
          .x_title
            %h2
              = current_user.church.name
              %small
                = pluralize(current_user.church.members.size, t('flash_messages.one_member'), t('flash_messages.many_members'))
            %ul.nav.navbar-right.panel_toolbox
              %li
                %a.collapse-link
                  %i.fa.fa-chevron-up
              %li
                %a.close-link
                  %i.fa.fa-close
            .clearfix
          .x_content
            .row
              .clearfix
              - @members.each do |member|
                .col-md-2.col-sm-2.col-xs-4
                  .col-sm-12
                    .text-center
                      = link_to gravatar_image_tag(member.email, filetype: :png, rating: 'pg', class:'img-circle profile_img', secure: false, gravatar: { default: :mm } ), edit_member_path(member)
                  .col-sm-12.text-center
                    .emphasis
                      = link_to edit_member_path(member) do
                        = member.first_name
                        %i.glyphicon.glyphicon-pencil
              .col-md-12.col-sm-12.col-xs-12.text-center
                = will_paginate @members, :class => 'margin: 0px'




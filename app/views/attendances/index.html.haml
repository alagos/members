.row
  = form_tag(attendances_path, method: :get, class: "form-inline", role: "form", id: 'attendance-form' ) do
    .form-group.col-xs-4.col-xs-offset-2
      %label{for: 'ministry_id'} Ministerios
      = select_tag :ministry_id, options_from_collection_for_select(@ministries, "id", "name", @current_ministry.id), class: "form-control"
    .form-group.col-xs-4.col-xs-offset-2
      %label{for: 'ministry_id'} Fecha
      = text_field_tag :attendance_date, @attendance_date, class: "form-control"

  - @current_ministry.charges.each do |charge|
    .form-group.col-xs-3
      .panel.panel-default
        .panel-heading= charge.responsibility.name
        .panel-body.form-group
          - charge.members.each do |member|
            - now = Time.now.to_f
            = hidden_field_tag "attendance[#{now}][ministry_id]", @current_ministry.id
            = hidden_field_tag "attendance[#{now}][attendance_date]", @attendance_date
            = hidden_field_tag "attendance[#{now}][member_id]", member.id
            .checkbox
              %label
                = check_box_tag "attendance[#{now}][present]", nil, false


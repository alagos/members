= form_for @attendance do |f|
  - if @attendance.errors.any?
    #error_explanation
      %h2= "#{pluralize(@attendance.errors.count, "error")} prohibited this attendance from being saved:"
      %ul
        - @attendance.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :member
    = f.text_field :member
  .field
    = f.label :ministry
    = f.text_field :ministry
  .field
    = f.label :attendance_date
    = f.datetime_select :attendance_date
  .field
    = f.label :present
    = f.check_box :present
  .actions
    = f.submit 'Save'

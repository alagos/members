- if user_signed_in?
  .navbar-default.sidebar{:role => "navigation"}
    .sidebar-nav.navbar-collapse
      %ul#side-menu.nav
        %li.sidebar-search
          = form_tag(members_path, method: "get", id: "search-form") do
            .input-group.custom-search-form
              = text_field_tag :name, params[:name], placeholder: t('placeholder.search_members'), class: 'form-control'
              %span.input-group-btn
                %button.btn.btn-default{:type => "submit"}
                  %i.fa.fa-search
            / /input-group
        %li
          %a{:href => "#"}
            %i.fa.fa-group.fa-fw
            = t('link.members')
            %span.fa.arrow
          %ul.nav.nav-second-level
            %li= link_to t('link.index_member'), members_path
            %li= link_to t('link.new_member'), new_member_path
          / /.nav-second-level
        %li
          %a{:href => "#"}
            %i.fa.fa-home.fa-fw
            = t('link.churches')
            %span.fa.arrow
          %ul.nav.nav-second-level
            %li= link_to t('link.index_church'), churches_path
            %li= link_to t('link.new_church'), new_church_path
          / /.nav-second-level
        %li
          = link_to attendances_path do
            %i.fa.fa-check-square-o.fa-fw
            = t('link.attendance')
        %li
          %a{:href => "#"}
            %i.fa.fa-home.fa-fw
            = t('link.ministries')
            %span.fa.arrow
          %ul.nav.nav-second-level
            %li= link_to t('link.index_ministry'), ministries_path
            %li= link_to t('link.new_ministry'), new_ministry_path
          / /.nav-second-level
        %li
          %a{:href => "#"}
            %i.fa.fa-home.fa-fw
            = t('link.responsibilities')
            %span.fa.arrow
          %ul.nav.nav-second-level
            %li= link_to t('link.index_responsibility'), responsibilities_path
            %li= link_to t('link.new_responsibility'), new_responsibility_path
          / /.nav-second-level
    / /.sidebar-collapse
  / /.navbar-static-side
